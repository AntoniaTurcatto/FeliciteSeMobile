<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nomeConteudo"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição:"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descricaoConteudo"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descreva o motivo da indicação:"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/indicacaoConteudo"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione a(s) emoção(ões) que aborda:"
        />

    <EditText
        android:id="@+id/emocaoConteudo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:textColor="#202020"
        android:background="#FFF"
        android:text="Selecione..."
        android:gravity="center"
        android:name="spinnerTipo"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:editable="false"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo do conteúdo:"
        />

    <Spinner
        android:id="@+id/tipoConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="spinnerTipo"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bCadastrarConteudo"
        android:text="Continuar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bCancelar"
        android:text="Cancelar"/>

</LinearLayout>