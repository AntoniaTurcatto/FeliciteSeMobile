<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sinopse da Série:" />
    <EditText
        android:id="@+id/sinopseSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a sinopse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de Temporadas:" />

    <EditText
        android:id="@+id/temporadasSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o número de temporadas"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ano de Lançamento:" />
    <EditText
        android:id="@+id/anoSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o ano"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plataforma de Streaming:" />
    <EditText
        android:id="@+id/plataformaSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a plataforma" />

    <ImageView
        android:id="@+id/imagemSerie"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <Button
        android:id="@+id/bAdicionarImagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Imagem" />

    <Button
        android:id="@+id/bCadastrarSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar" />

</LinearLayout>
